#!/bin/sh
dir=build/repo
url=root@zeus:/srv/http/aurion
mkdir -p $dir
rsync -lr $url/ $dir
if [ -d "$1" ]; then
    for pkgfile in $dir/"$(basename "$1")"-*.pkg.tar*; do
	if [ -e "$pkgfile" ]; then
	    ln -srf "$pkgfile" "$1"
	    repo-add -d -n -R $dir/aurion.db.tar.xz "$pkgfile"
	    rsync "$pkgfile" $url/
	fi
    done
fi
rsync -lr --delete $dir/ $url
