#!/bin/sh
[ "$1" ] || exit

case "$(dirname "$1")" in
    aur|my-aur)
	git submodule deinit "$1"
	git rm -f "$1"
	;;
    *)
	rm -rf "$1"
	;;
esac

for repo in build/repo/*.db; do
    repo="$(readlink -e "$repo")" && repo-remove "$repo" "$(basename "$1")"
done
url="$(cat global-url)"
rsync -lr --delete build/repo/ "$url"
