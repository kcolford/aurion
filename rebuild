#!/bin/sh
export BUILDDIR="$PWD"/build/build/"$1"
export PKGDEST="$PWD"/build/repo
export SRCDEST="$PWD"/build/src/"$1"
mkdir -p "$BUILDDIR" "$PKGDEST" "$SRCDEST"
cd "$1" || exit
case "$(dirname "$1")" in
    my-aur)
	makepkg -Cs
	makepkg --printsrcinfo > .SRCINFO
	updpkgsums
	;;
    *)
	makepkg -Cs
esac
