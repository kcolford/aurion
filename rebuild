#!/bin/sh
scndarg=already-recursed
[ "$1" ] || exit
[ "$2" = $scndarg ] || exec ./fix-build "$1" ./rebuild "$1" $scndarg
d="$(dirname "$1")"
b="$(basename "$1")"
case "$d" in
    my-aur)
	updpkgsums
	makepkg --printsrcinfo > .SRCINFO

	makepkg -s

	git add -u
	git commit -m "Update $b"
	;;
    *)
	makepkg -s
	;;
esac
