#!/bin/sh
case "$(dirname "$1")" in
    aur|my-aur)
	if [ -d "$1" ]
	then
	    ./init "$1"
	    git -C "$1" checkout master
	    git -C "$1" pull
	else
	    git submodule add https://aur.archlinux.org/"$(basename "$1")" "$1"
	    ./init "$1"
	fi
	;;
    core|extra|community)
	ABSROOT=. abs "$1"
	;;
esac
