#!/bin/sh
for d
do
    if [ -d "$d" ]
    then
	git subtree pull -P "$d" https://aur.archlinux.org/"$(basename "$d")" master
    else
	git subtree add -P "$d" https://aur.archlinux.org/"$(basename "$d")" master
    fi
    mkdir -p build
    ( cd "$d" && PKGDEST=../../build makepkg -s )
    ( cd build && repose -Jf aurion )
done
